<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enforma - Spa & Slimming Center </title>
    <link rel="shortcut icon" href="~/img/ico/favicon.ico">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top mynav">
        <div class="container">
            <div class="navbar-header">
                <img class="enforma-logo" src="~/img/logo/logo.png" alt="Alternate Text" />
            </div>
        </div>
    </div>
    
    <div class="myDiv jumbotron myShadows container"></div>
    
    <div class="container" style="margin-top: -20px">
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color: white">&copy; 2010 - @DateTime.Now.Year Enforma - Spa & Slimming Center</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
